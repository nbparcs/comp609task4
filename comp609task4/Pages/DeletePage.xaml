<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="comp609task4.Pages.DeletePage"
             xmlns:models="clr-namespace:comp609task4.Models"
             xmlns:viewmodels="clr-namespace:comp609task4.ViewModels"
             BackgroundColor="#04243B">

    <VerticalStackLayout Margin="0,20" MaximumWidthRequest="800" Spacing="30" Padding="20,20" BackgroundColor="#FBF2F0">
        
        <Label Text="Delete Animals Record" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20"/>

        <Grid ColumnDefinitions="2*, 1*" ColumnSpacing="10">
                <Entry x:Name="LiveStockID" Placeholder="LiveStock ID"/>
            <Button Grid.Column="1" Clicked="LiveStockDelete_Btn" Text="DELETE" BackgroundColor="#F9991C"/>
        </Grid>

        <Label x:Name="RecordDeletedInfo" Text="Deleted Record: "/>
        
    </VerticalStackLayout>

</ContentPage>
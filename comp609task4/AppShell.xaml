<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="comp609task4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:comp609task4"
    xmlns:Pages="clr-namespace:comp609task4.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="comp609task4">
    <TabBar>
        <Tab Title="Data Listing" Shell.NavBarIsVisible="True">
            <ShellContent ContentTemplate="{DataTemplate Pages:DataPage}"/>
        </Tab>
        <Tab Title="Stats and Investment" Shell.NavBarIsVisible="True">
            <ShellContent ContentTemplate="{DataTemplate Pages:StatsnInvestmentPage}"/>
        </Tab>
        <Tab Title="LiveStock Info" Shell.NavBarIsVisible="True">
            <ShellContent ContentTemplate="{DataTemplate Pages:InfoPage}"/>
        </Tab>
        <Tab Title="Insert LiveStock" Shell.NavBarIsVisible="True">
            <ShellContent ContentTemplate="{DataTemplate Pages:InsertPage}"/>
        </Tab>
        <Tab Title="Delete LiveStock" Shell.NavBarIsVisible="True">
            <ShellContent ContentTemplate="{DataTemplate Pages:DeletePage}"/>
        </Tab>
        <Tab Title="Update LiveStock" Shell.NavBarIsVisible="True">
            <ShellContent ContentTemplate="{DataTemplate Pages:UpdatePage}"/>
        </Tab>
    </TabBar>
</Shell>
